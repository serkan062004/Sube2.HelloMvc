@model Ders
@{
    ViewData["Title"] = "Ders Ekle";
}
<div class="container d-flex justify-content-center my-5">
    <div class="card" style="width: 50%; background-color: #fd0;">
        <div class="card-body">
            <h2 class="card-title text-center">Yeni Ders Ekle</h2>
            <form asp-action="AddDers" asp-controller="Ders" method="post">
                <div class="form-group">
                    <label for="DersKodu">Ders Kodu</label>
                    <input asp-for="DersKodu" class="form-control" id="DersKodu" placeholder="Ders Kodunu Girin" />
                </div>

                <div class="form-group">
                    <label for="DersAd">Ders Adı</label>
                    <input asp-for="DersAd" class="form-control" id="DersAd" placeholder="Ders Adını Girin" />
                </div>

                <div class="form-group">
                    <label for="Kredi">Kredi</label>
                    <input asp-for="Kredi" class="form-control" id="Kredi" placeholder="Dersin Kredisini Girin" />
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-success">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>
