@model Ders
@{
    ViewData["Title"] = "KayitliOgrenciler";
}

<div class="container my-5">
    <h1 class="text-center mb-4">@Model.DersAd - Kayıtlı Öğrenciler</h1>
    <div class="card shadow">
        <div class="card-body">
            @if (Model.OgrenciDersler != null && Model.OgrenciDersler.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Numara</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ogrenciDers in Model.OgrenciDersler)
                        {
                            <tr>
                                <td>@ogrenciDers.Ogrenci?.Numara</td>
                                <td>@ogrenciDers.Ogrenci?.Ad</td>
                                <td>@ogrenciDers.Ogrenci?.Soyad</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Bu derse henüz kayıtlı öğrenci yok.</p>
            }
        </div>
    </div>
</div>
