@model IEnumerable<Ders>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Ders İşlemleri</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Ders Listesi</h2>
        <div>
            <a class="btn btn-outline-primary me-2" asp-action="Index" asp-controller="Student">Öğrenciler</a>
            <a class="btn btn-outline-primary" asp-action="AddDers" asp-controller="Ders">Ders Ekle</a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>Ders Kodu</th>
                <th>Ders Adı</th>
                <th class="text-center">Kredi</th>
                <th class="text-center">İşlemler</th>
                <th class="text-center">Dersi Alan Öğrenciler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ders in Model)
            {
                <tr>
                    <td>@ders.DersKodu</td>
                    <td>@ders.DersAd</td>
                    <td class="text-center">@ders.Kredi</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-outline-warning" href="/Ders/EditDers/@ders.Dersid">
                            <i class="bi bi-pencil-square"></i> Düzenle
                        </a>
                        <a onclick="return confirm('Emin misiniz?')" class="btn btn-sm btn-outline-danger" href="/Ders/DeleteDers/@ders.Dersid">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-outline-info" href="/Ders/KayitliOgrenciler/@ders.Dersid">
                            <i class="bi bi-eye"></i> Gör
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
