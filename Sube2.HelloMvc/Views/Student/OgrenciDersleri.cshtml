@model Ogrenci
@{
    ViewData["Title"] = "OgrenciDersleri";
}

<div class="container my-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@Model.Ad @Model.Soyad - Aldığı Dersler</h2>
        </div>
        <div class="card-body">
            @if (Model.OgrenciDersler != null && Model.OgrenciDersler.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Ders Kodu</th>
                            <th>Ders Adı</th>
                            <th>Kredi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ogrDers in Model.OgrenciDersler)
                        {
                            <tr>
                                <td>@ogrDers.Ders?.DersKodu</td>
                                <td>@ogrDers.Ders?.DersAd</td>
                                <td>@ogrDers.Ders?.Kredi</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Bu öğrenci henüz herhangi bir ders almamış.</p>
            }
        </div>
    </div>
</div>
